@page "/books2"

@using G2S1.BlazorServer.Pages.Books.Components

@inject ISnackbar snackBar

@if (isLoading)
{
    <MudProgressCircular Color="Color.Error" Indeterminate="true" />
}
else
{
    <MudText Typo="Typo.h4" Style="color: blueviolet;"><b>Gestión de Libros</b></MudText>

    <MudText Typo="Typo.h6" Class="my-2">@Book.Name | @FavoriteCountTotal</MudText>

    <CascadingValue Name="Book" Value="@Book">
        <MudGrid Spacing="2">
            <MudItem xs="12" sm="12" md="4">
                <PageComponent @ref="page" PageId="1" State="Activa" @bind-FavoriteCountTotal="@FavoriteCountTotal" OnPagePrintClick="OnPagePrintClick">
                    <TitleFragment>
                        <MudText Typo="Typo.h6" Style="color: aquamarine;">Introducción a Blazor</MudText>
                    </TitleFragment>
                    <ContentFragment>
                        <MudText Typo="Typo.body1">Guía de Blazor</MudText>
                    </ContentFragment>
                </PageComponent>
            </MudItem>
            <MudItem xs="12" sm="12" md="4">
                <PageComponent PageId="2" State="Activa" @bind-FavoriteCountTotal="@FavoriteCountTotal" OnPagePrintClick="OnPagePrintClick">
                    <TitleFragment>
                        <MudText Typo="Typo.h6" Color="Color.Error">Introducción a WebAPI</MudText>
                    </TitleFragment>
                </PageComponent>
            </MudItem>
        </MudGrid>
    </CascadingValue>
}

<ConfirmComponent @ref="confirm" State="Activo"></ConfirmComponent>

<MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="OnChangeStateClick">Cambiar estado</MudButton>